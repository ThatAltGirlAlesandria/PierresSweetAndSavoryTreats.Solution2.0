@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
<h1>List of Treats</h1>

@if (Model.Count == 0)
{
  <p>No Treats have been added yet.</p>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId })</li>
    }
  </ul>
}

@Html.ActionLink("Add a new Treats", " ", "Create")
